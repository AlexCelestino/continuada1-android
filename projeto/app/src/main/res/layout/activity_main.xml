<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cálculo salário família"
        android:id="@+id/tvTitulo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite seu nome"
        android:id="@+id/etNome"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite seu salario"
        android:id="@+id/etSalario"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/etNome"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite a quantidade de filhos"
        android:id="@+id/etQtdFilhos"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/etSalario"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btCalcular"
        android:onClick="calculaSalarioFamilia"
        app:layout_constraintTop_toBottomOf="@+id/etQtdFilhos"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResultado"
        app:layout_constraintTop_toBottomOf="@+id/btCalcular"
        />



</androidx.constraintlayout.widget.ConstraintLayout>